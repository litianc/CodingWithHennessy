# 服务器配置
NODE_ENV=development
PORT=5000
FRONTEND_URL=http://localhost:3000

# 数据库配置
MONGODB_URI=mongodb://localhost:27017/meeting-agent
REDIS_URL=redis://localhost:6379

# JWT 配置
JWT_SECRET=your-super-secret-jwt-key
JWT_EXPIRES_IN=7d

# 阿里云配置
ALIBABA_CLOUD_ACCESS_KEY_ID=your-access-key-id
ALIBABA_CLOUD_ACCESS_KEY_SECRET=your-access-key-secret
ALIBABA_CLOUD_REGION=cn-hangzhou

# 阿里云语音识别
ALIBABA_CLOUD_APP_KEY=your-app-key

# DeepSeek API 配置
DEEPSEEK_API_KEY=your-deepseek-api-key
DEEPSEEK_API_BASE_URL=https://api.deepseek.com

# 邮件配置
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM=智能会议纪要 <noreply@meeting-agent.com>

# 测试邮件配置 (用于SMTP集成测试)
TEST_EMAIL=your-test-email@gmail.com

# 文件上传配置
UPLOAD_DIR=uploads
MAX_FILE_SIZE=100MB
ALLOWED_AUDIO_FORMATS=wav,mp3,webm,m4a

# 日志配置
LOG_LEVEL=info
LOG_DIR=logs

# 安全配置
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# 功能开关
ENABLE_VOICEPRINT=true
ENABLE_AI_CHAT=true
ENABLE_EMAIL=true
ENABLE_RECORDING=true

# ==================== 语音识别服务配置 ====================

# 服务提供商选择 (funasr | aliyun)
SPEECH_SERVICE_PROVIDER=funasr

# FunASR 服务配置
FUNASR_SERVICE_URL=http://localhost:10095
FUNASR_WS_URL=ws://localhost:10096
FUNASR_TIMEOUT=30000
FUNASR_MAX_RETRIES=3

# ==================== 声纹识别服务配置 ====================

# 服务提供商选择 (3dspeaker | local)
VOICEPRINT_SERVICE_PROVIDER=3dspeaker

# 3D-Speaker 服务配置
SPEAKER_SERVICE_URL=http://localhost:5002
SPEAKER_SERVICE_TIMEOUT=15000
SPEAKER_SIMILARITY_THRESHOLD=0.75

# ==================== 音频处理配置 ====================

# 音频格式标准化
AUDIO_SAMPLE_RATE=16000
AUDIO_CHANNELS=1
AUDIO_BIT_DEPTH=16
AUDIO_FORMAT=wav

# ==================== Mock 模式配置 ====================

# 使用 Mock 模式（开发测试用）
USE_MOCK_SPEECH_SERVICE=false
USE_MOCK_VOICEPRINT_SERVICE=false

# 调试配置
DEBUG_MODE=false
ENABLE_QUERY_LOGGING=false